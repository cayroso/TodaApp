{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "AllowedHosts": "*",
  "AppSettings": {
    "UseSQLite": true,
    "SQLServer": "(local)\\SQLExpress"
  },

  "ConnectionStrings": {
    "LoggerDbContextConnectionSQLite": "DataSource=App_Data\\LoggerDb-PD.db;",

    "AppDbContextConnectionSQLite": "DataSource=App_Data\\LMSSystemDB-DV.db",
    "AppDbContextConnectionSQLServer": "Server=(local)\\SQLExpress;Database=LMSSystemDB-DV;trusted_connection=true;"
  }
}